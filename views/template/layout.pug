doctype html
html
	head
		block scripts
		link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet", href="/css/master.css")
	body
		nav.navbar
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') X-Medium
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a(href='/') Home
						if (user)					
							li
								a(href='/article/add') Add your story !							
					ul.nav.navbar-nav.navbar-right
						if (!user)
							li
								a(href='/user/register') Register
							li
								a(href='/user/login') Login
						else	
							
							p.navbar-text.
								Signed in as #{username}
							li
								a(href='/user/logout') Logout
								 							
													
		#alert-place.container
			!= messages('template/message', locals)
			if errors
				each error, i in errors
					.row
						div(class="alert alert-danger text-center col-sm-6 col-sm-offset-3") 
							strong #{error.msg}
						
			block content
			
		script(src="/bower_components/jquery/dist/jquery.min.js")
		script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
		script(src="/js/main.js")
		
		footer
			p.text-center Budi Haryono &copy;2017
